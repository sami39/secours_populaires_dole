{% extends 'base.html.twig' %}

{% block title %}Fiche journalière
{% endblock %}
{% block stylesheets %}


	<link
	rel="stylesheet" href="{{ asset ("bundle/plugins/fontawesome-free/css/all.min.css")}}">
	<!-- Ionicons -->
	<link
	rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
	<!-- overlayScrollbars -->
	<link
	rel="stylesheet" href="{{ asset ("bundle/dist/css/adminlte.min.css")}}">
	<!-- Google Font: Source Sans Pro -->
	<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

{% endblock %}

{% block body %}

 
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Fiche journalière</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							    <input type="button" value="Imprimer cette page" onClick="window.print()">
						</li>
						<li class="breadcrumb-item active">Fiche journalière</li>
                     
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>


	<div
		class="hold-transition sidebar-mini">
		<!-- Site wrapper -->
		<div class="wrapper">

			<!-- Message End -->

			<!-- Message End -->

			<!-- /.navbar -->

			<!-- Main Sidebar Container -->


			<!-- Main content --><section
				class="content"> <!-- Default box -->

			</div>
		</div>
		 
		<div class="container justify-content-center">

			<div class="card-body ">
				<table class="table table-striped projects">
					<thead class="text-center">
						<tr>
							<th style="width: 1%">
								Colis
							</th>
							<th style="width: 20%">
								Nom & Prenom
							</th>
							<th style="width: 20%">
								Date et heure
							</th>
							<th style="width: 20%">
								Frequence
							</th>
							<th style="width: 10%">
								Telephone
							</th>
							<th style="width: 25%"></th>
						</tr>
					</thead>


					<tbody class="text-center">


						{% for Adherent in Fiche %}

							<tbody class="text-center">

								<tr>

									<td>
										{{Adherent.Adherents.Colis}}
									</td>
									<td>
										{{ Adherent.Adherents.NomPrenom}}
									</td>

									<td>
										{{Adherent.date|date("Y-m-d H:i:s") }}

									</td>
									<td>
										{{ Adherent.Adherents.FrequenceMensuelle}}
									</td>
									<td>
										{{ Adherent.Adherents.Telephone}}
									</td>


									<td class="project-actions text-right">


										<a class="btn btn-danger btn-sm" onclick="return confirm('êtes-vous sûr de vouloir supprimer  ')" href="#">
											<i class="fas fa-trash"></i>
											supprimer
										</a>

									</td>
								</tr>
							{% endfor %}
						</tbody>
					</tbody>
				</table>
			</div>
		</div>
       
		<!-- /.card-body -->
	</body>
</div>
