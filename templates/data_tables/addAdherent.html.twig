{% block body %}
<!-- Font Awesome -->

 {{ form_start(form) }}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Ajouter
            nouveau adherent</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Ajouter Adherent</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Info Adhrent</h3>

            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                title="Collapse">
                <i class="fas fa-minus"></i></button>
            </div>
          </div>
          {{ form_row(form.NomPrenom) }}
          <div class="card-body">
            <div class="form-group">
              <label for="inputName">Nom & Prenom</label>
              <input type="text" id="inputName" class="form-control">
            </div>
            
            <div class="form-group">
              <label for="inputDescription">Observation</label>
              <textarea id="inputDescription" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group">
              <label for="inputStatus">Colis</label>
              <select class="form-control custom-select">
                <option selected disabled>choisir colis</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
            </div>
            <div class="form-group">
              <label for="inputClientCompany">Numero dossier</label>
              <input type="text" id="inputClientCompany" class="form-control">
            </div>
            <div class="form-group">
              <label for="inputProjectLeader">Telephone</label>
              <input type="text" id="inputProjectLeader" class="form-control">
            </div>
            <div class="form-group">
              <label for="inputProjectLeader">Date d'inscription</label>
              <input type="date" id="inputProjectLeader" class="form-control">
            </div>
             <div class="form-group">
              <label for="inputProjectLeader">Adulte</label>
              <input type="number" id="inputProjectLeader" class="form-control">
            </div>
               <div class="form-group">
              <label for="inputProjectLeader">Enfant</label>
              <input type="number" id="inputProjectLeader" class="form-control">
            </div>
                   <div class="form-group">
              <label for="inputStatus">Frequence Mensuelle</label>
              <select class="form-control custom-select">
                <option selected disabled>Nombre passage par moin </option>
                <option>1</option>
                <option>2</option>
                <option>exceptionnel</option>
 

                 
              </select>
          
          </div>
        
                               

        </div>
         

        <!-- /.card-body -->
      </div>
       <input type="submit" value="Ajouter  nouveau adherent" class="btn btn-success float-right"> 
      <!-- /.card -->
    </div>


    <!-- /.card-body -->
</div>
<!-- /.card -->
</div>
</div>
<div class="row">
  <div class="col-12">


  </div>
</div>
</section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->



